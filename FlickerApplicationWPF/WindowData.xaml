<Window x:Class="FlickerApplication.WindowData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Received Data" Height="272" Width="616" ResizeMode="CanMinimize" WindowStartupLocation="Manual" Left="Auto">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,8,0,48" Name="textBox1" Width="565" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" />
        <Button Content="Save Data" Height="23" HorizontalAlignment="Center" Margin="237,0,237,12" Name="button1" VerticalAlignment="Bottom" Width="120" FontWeight="Bold" Click="button1_Click" />
    </Grid>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF659CB4" Offset="0" />
            <GradientStop Color="Black" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
</Window>
